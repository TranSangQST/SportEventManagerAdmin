
<div class="container">
    <div class="admin-container-content">

        <header class="px-4">
            <h1 class="row py-2 pl-2 text-primary">
                Danh sách đội
            </h1>
        </header>

        <div class="table-wrapper">
            <form method="get" action="/tournament" id="searchForm">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-sm-10">
                                <div class="row gx-3 gy-2 mb-4 align-items-center">
                                    <div class="col-sm-3">
                                        <input type="text" name="tournamentId" class="form-control" id="" placeholder="Mã giải đấu"
                                            {{#if filter.tournamentId}}
                                               value="{{filter.tournamentId}}"
                                            {{/if}}
                                        >
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="hidden" id="filterTournamentName"
                                            {{#if filter.tournamentName}}
                                               value="{{filter.tournamentName}}"
                                            {{/if}}
                                        >
                                        <select name="tournamentName" class="form-select" id="tournamentName">
                                            <option value="0" selected>Tên giải đấu</option>
                                            {{#each tournamentNames}}
                                                <option value="{{TenGD}}">{{TenGD}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="row"></div>
                            </div>
                            <div class="col-sm-2">
                                <button id="searchBtn" type="submit" class="btn btn-primary left" form="searchForm">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <a href="#addModal" class="btn btn-success btn-add" data-toggle="modal"><i
                                class="fas fa-plus-circle"></i> <span>Thêm giải đấu</span></a>
                        <a href="#deleteAllModal" class="btn btn-danger btn-delete" data-toggle="modal"><i
                                class="fas fa-minus-circle"></i><span>Xóa tất cả</span></a>
                    </div>
                </div>
                <div class="row pb-2 d-flex align-items-center">
                    <div class="col-sm-1">
                        Số dòng
                    </div>
                    <div class="col-sm-2">
                        <div class="d-flex justify-content-between">
                            <input name="limit" type="text" class="form-control shadow-none" aria-label="Text input with dropdown button" placeholder="Số dòng"

                                   value="{{pagination.limit}}"
                            >
                        </div>
                    </div>
                </div>
            </form>
            <form action="/tournament/deleteAll" method="get" id="selectedTeamForm">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="selectAll">
                            <label for="selectAll"></label>
                        </span>
                        </th>
                        <th>Mã giải đấu</th>
                        <th>Độ tuổi lớn nhất</th>
                        <th>Độ tuổi nhỏ nhất</th>
                        <th>Số đội bóng tham gia</th>
                        <th>Chi tiết</th>
                        <th>Sửa/Xóa</th>

                    </tr>
                    </thead>
                    <tbody>
                    {{#each tournaments}}
                        <tr>
                            <td>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="checkbox1" name="options[]" value="{{MaGD}}">
                            <label for="checkbox1"></label>
                        </span>
                            </td>
                            <td>{{MaGD}}</td>
                            <td>{{TenGD}}</td>
                            <td>{{DoTuoiTGNhoNhat}}</td>
                            <td>{{DoTuoiTGLonNhat}}</td>
                            <td class="text-center">
                                <a href="">
                                    Chi tiết
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </td>
                            <td>
                                <a href="#editModal" class="edit" data-toggle="modal">
                                    <input type="hidden" value="{{MaGD}}">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a href="#deleteModal" class="delete" data-toggle="modal">
                                    <input type="hidden" value="{{MaGD}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </form>

       </div>

        <footer class="row justify-content-center">
            <nav class="col-lg-3 col-md-6 col-sm-9" aria-label="Page navigation example" id="pagination">
                {{{createPagination pagination paginationClass="pagination"}}}
            </nav>
        </footer>
    </div>
</div>
