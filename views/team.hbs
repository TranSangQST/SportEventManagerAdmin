
<div class="container">
    <div class="admin-container-content">
        <header class="px-4">
            <h1 class="row py-2 pl-2 text-primary">
                Danh sách đội
            </h1>
        </header>
        <div class="table-wrapper px-4">
            <form method="get" action="/team" id="searchForm">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-sm-10">
                                <div class="row gx-3 gy-2 mb-4 align-items-center">
                                    <div class="col-sm-3">
                                        <input type="text" name="teamId" class="form-control" id="" placeholder="Mã độ bóng"
                                            {{#if filter.teamId}}
                                               value="{{filter.teamId}}"
                                            {{/if}}
                                        >
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" name="userId" class="form-control" id="" placeholder="Mã người đăng ký"
                                            {{#if filter.userId}}
                                               value="{{filter.userId}}"
                                            {{/if}}
                                        >
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="hidden" id="filterTeamName"
                                            {{#if filter.teamName}}
                                               value="{{filter.teamName}}"
                                            {{/if}}
                                        >
                                        <select name="teamName" id="teamName" class="form-select">
                                            <option value="0" selected>Tên đội bóng</option>
                                            {{#each teamNames}}
                                                <option value="{{TenDB}}">
                                                    {{TenDB}}
                                                </option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="hidden" id="filterTournamentName"
                                            {{#if filter.tournamentName}}
                                               value="{{filter.tournamentName}}"
                                            {{/if}}
                                        >
                                        <select name="tournamentName" class="form-select" id="tournamentName">
                                            <option value="0" selected>Tên giải đấu</option>
                                            {{#each tournamentNames}}
                                                <option value="{{TenGD}}">{{TenGD}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="row"></div>
                            </div>
                            <div class="col-sm-2">
                                <button id="searchBtn" type="submit" class="btn btn-primary left" form="searchForm">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <a href="#deleteAllModal" class="btn btn-danger btn-delete" data-toggle="modal"><i
                                class="fas fa-minus-circle"></i><span>Xóa tất cả</span></a>
                    </div>
                </div>
                <div class="row pb-2 d-flex align-items-center">
                    <div class="col-sm-1">
                        Số dòng
                    </div>
                    <div class="col-sm-2">
                        <div class="d-flex justify-content-between">
                            <input name="limit" type="text" class="form-control shadow-none" aria-label="Text input with dropdown button" placeholder="Số dòng"
                                   value="{{pagination.limit}}"
                            >
                        </div>
                    </div>
                </div>
            </form>
            <form action="/team/deleteAll" method="get" id="selectedTeamForm">
                <table id="table" class="table table-striped table-bordered table-hover">
                <thead>
                      <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Mã đội bóng</th>
                        <th>Tên đội bóng</th>
                        <th>Số thành viên</th>
                        <th>Màu áo</th>
                        <th>Điểm</th>
                        <th>Mã người đăng ký</th>
                        <th>Mã giải đấu</th>
                        <th>Mã bảng đấu</th>
                        <th>Sửa/Xóa</th>
                    </tr>
                </thead>
                <tbody>
                {{#each teams}}
                    <tr>
                        <td>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="checkbox1" name="options[]" value="{{MaDB}}">
                            <label for="checkbox1"></label>
                        </span>
                        </td>

                        <td>{{MaDB}}</td>
                        <td>{{TenDB}}</td>
                        <td>{{SoThanhVien}}</td>
                        <td>{{MauAo}}</td>
                        <td>{{Diem}}</td>
                        <td>{{MaNDK}}</td>
                        <td>{{MaGD}}</td>
                        <td>{{MaBD}}</td>
                        <td>
                            <a href="#deleteModal" class="delete" data-toggle="modal">
                                <input type="hidden" value="{{MaGD}}">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
            </form>
        </div>

        <footer class="row justify-content-center">
            <nav class="col-lg-3 col-md-6 col-sm-9" aria-label="Page navigation example" id="pagination">
                {{{createPagination pagination paginationClass="pagination"}}}
            </nav>
        </footer>
    </div>
</div>

<!-- Delete Modal HTML -->
<div id="deleteModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="get" action="/team/delete">
                <input type="hidden" name="deleteID" id="deleteID">
                <div class="modal-header">
                    <h4 class="modal-title">Xóa thành viên này?</h4>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-hidden="true"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn xóa giải đấu?</p>
                    <p class="text-warning"><small>Hành động này sẽ không được phục hồi!</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy">
                    <input type="submit" class="btn btn-danger" value="Xóa">
                </div>
            </form>
        </div>
    </div>
</div>
<div id="deleteAllModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div>
                <div class="modal-header">
                    <h4 class="modal-title">Xóa tất cả đội đã chọn?</h4>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-hidden="true"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn xóa tất cả thành viên khỏi đội?</p>
                    <p class="text-warning"><small>Hành động này sẽ không được phục hồi!</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Hủy">
                    <button type="submit" class="btn btn-danger" form="selectedTeamForm">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'script'}}
    <script>
        $(".delete").click(function() {
            const id = $(this).children('input').val();
            console.log("deleteID: ",id);
            $("#deleteID").val(id);
        });


        holdSelectedOption = function (){
            // Hiển thị option teamName sau khi search
            // filterTeamName = giá trị của teamName ta chọn trước khi search
            const filterTeamName = $('#filterTeamName').val();
            if(filterTeamName){
                // Nếu filterTeamName tồn tài thì
                //Xóa đi selected mặc định của option[value="0"]
                //thêm selected cho option có value = filterTeamName
                $('#teamName option[value="0"]').attr('selected',null);
                $(`#teamName option[value="${filterTeamName}"]`).attr('selected','selected');
            }

            //--------------------------------------------------------------------------//
            // Hiển thị option tournamentName sau khi search
            const filterTournamentName = $('#filterTournamentName').val();
            console.log("filterTournamentName: ",filterTournamentName);
            if(filterTournamentName){
                $('#tournamentName option[value="0"]').attr('selected',null);
                $(`#tournamentName option[value="${filterTournamentName}"]`).attr('selected','selected');
            }
        }

        holdSelectedOption();

    </script>

    <script src="/javascripts/pagination.js"></script>
{{/section}}

