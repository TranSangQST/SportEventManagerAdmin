
<div class="container">
    <div class="admin-container-content">
        <header class="px-4">
            <h1 class="row py-2 pl-2 text-primary">
                Danh sách sân thi đấu
            </h1>
        </header>
        <div class="table-wrapper px-4">
            <form class="" name="searchForm" action="/stadium/deleteAll">
                <div class="row align-items-start justify-content-between">
                    <div class="col-lg-10">
                        <div class="row pb-2">
                            <div class="pb-2 col-lg-6 col-md-6">
                                <div class="d-flex justify-content-between">
                                    <input type="text" name="stadiumId" class="form-control" id="" placeholder="Mã sân vận động"
                                        {{#if filter.stadiumId}}
                                           value="{{filter.stadiumId}}"
                                        {{/if}}
                                    >
                                </div>
                            </div>


                            <div class="pb-2 col-lg-6 col-md-6">
                                <div class="d-flex justify-content-between">
                                    <div class="select-menu-group">
                                        <input type="hidden" id="filterStadiumAddress"
                                            {{#if filter.stadiumAddress}}
                                               value="{{filter.stadiumAddress}}"
                                            {{/if}}
                                        >
                                        <select name="stadiumAddress" id="stadiumAddress" class="form-select">
                                            <option value="0" selected>Địa chỉ/option>
                                            {{#each stadiums}}
                                                <option value="{{DiaChi}}">
                                                    {{DiaChi}}
                                                </option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1 d-flex justify-content-end">
                        <button id="resetBtn" type="button" class="btn btn-warning left">
                            Reset
                        </button>
                        <button id="searchBtn" type="submit" class="btn btn-primary left">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="row pb-2 d-flex align-items-center justify-content-between">
                    <div class="col-lg-4 pb-2">
                        <div class="row align-items-center">
                            <div class="col-lg-6">
                                <div class="row align-items-center">
                                    <div class="col-lg-6">
                                        Số dòng
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="d-flex justify-content-between">
                                            <input name="limit" id="limit" type="text" class="form-control shadow-none" aria-label="Text input with dropdown button" placeholder="Số dòng"
                                                {{#if pagination.limit}}
                                                   value="{{pagination.limit}}"
                                                {{/if}}
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-2 text-center">
                        <a href="#addModal" class="btn btn-success btn-add" data-toggle="modal"><i
                                class="fas fa-plus-circle"></i> <span>Thêm sân vận động</span>
                        </a>
                    </div>
                </div>
            </form>

            <form action="/stadium/deleteAll" method="get" id="selectedForm">
                <table id="table" class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Mã sân đấu</th>
                        <th>địa chỉ sân đấu</th>
                        <th>Sửa/Xóa</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each stadiums}}
                        <tr>
                            <td>
                        <span class="custom-checkbox">
                            <input type="checkbox" id="checkbox1" name="idOptions[]" value="{{MaDB}}">
                            <label for="checkbox1"></label>
                        </span>
                            </td>

                            <td>{{MaSD}}</td>
                            <td>{{DiaChi}}</td>
                            <td>
                                <a href="#deleteModal" class="delete" data-toggle="modal">
                                    <input type="hidden" value="{{MaSD}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </form>
        </div>

        <footer class="row justify-content-center">
            <nav class="col-lg-3 col-md-6 col-sm-9" aria-label="Page navigation example" id="pagination">
                {{{createPagination pagination paginationClass="pagination"}}}
            </nav>
        </footer>
    </div>
</div>

<!-- Delete Modal HTML -->
